{minimum_otp_vsn, "26.0"}.

{deps, [
    {uuid, "2.0.4", {pkg, uuid_erl}},
    jsone,
    {color, {pkg, erlang_color}},
    erlware_commons,
    mapz,
    argparse,
    hackney,
    meck
]}.

{escript_main_app, sscg_generator}.

{shell, [
    {apps, [sscg_generator]}
]}.

{plugins, [rebar3_ex_doc]}.

{ex_doc, [
    {extras, 
        [{"README.md",    #{title => "Overview"}},
         {"docs/sscg.md", #{title => "SSCG"}},
         {"CHANGELOG.md", #{title => "Change Log"}}]},
    {main, "README.md"},
    {before_closing_body_tag, #{
        html => "<script src=\"https://cdn.jsdelivr.net/npm/mermaid@10.2.4/dist/mermaid.min.js\"></script>"
    }}]}.
